<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_content"
    android:background="@drawable/fondo_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/register_toolbar"
        android:layout_width="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_logo"
        android:layout_height="?attr/actionBarSize" />

    <ImageView
        android:id="@+id/register_logo"
        style="@style/logo"
        app:layout_constraintTop_toBottomOf="@+id/register_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_title"
         />

    <TextView
        style="@style/title"
        android:text="@string/register_title"
        android:id="@+id/register_title"
        android:layout_marginTop="@dimen/marginTop_view"
        app:layout_constraintTop_toBottomOf="@+id/register_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_input_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

-->
            <EditText
                android:id="@+id/register_input_name"
                style="@style/register_edittext"
                android:inputType="textPersonName"
                android:background="@drawable/register_textview_backround"
                android:hint="@string/register_hint_name"
                app:layout_constraintBottom_toTopOf="@+id/register_input_lastname"
                app:layout_constraintTop_toBottomOf="@+id/register_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />


           <EditText
                android:id="@+id/register_input_lastname"
                style="@style/register_edittext"
                android:inputType="text"
                android:background="@drawable/register_textview_backround"
                android:hint="@string/register_hint_lastname_p"
                app:layout_constraintBottom_toTopOf="@+id/register_input_mail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_input_name"
               />



            <EditText
                android:id="@+id/register_input_mail"
                style="@style/register_edittext"
                android:inputType="textEmailAddress"
                android:background="@drawable/register_textview_backround"
                android:hint="@string/register_hint_mail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/register_input_password"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_input_lastname"/>


            <EditText
                android:id="@+id/register_input_password"
                style="@style/register_edittext"
                android:background="@drawable/register_textview_backround"
                android:hint="@string/register_hint_pass"
                app:layout_constraintBottom_toTopOf="@+id/register_input_confirm_password"
                android:inputType="textPassword"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register_input_mail"
                 />
        <EditText
            android:id="@+id/register_input_confirm_password"
            style="@style/register_edittext"
            android:inputType="textPassword"
            android:background="@drawable/register_textview_backround"
            android:hint="@string/register_hint_confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/register_input_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/register_rg_sexo"/>


        <RadioGroup
            android:id="@+id/register_rg_sexo"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/login_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/register_input_confirm_password"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/register_cb_terminos_condiciones">

            <RadioButton
                android:id="@+id/rbGeneroMasculino"
                style="@style/register_radio_btn"
                android:layout_weight="1"
                android:text="@string/register_rb_masculino"/>

            <RadioButton
                android:id="@+id/rbGeneroFemenino"
                style="@style/register_radio_btn"
                android:layout_weight="1"
                android:text="@string/register_rb_femenino" />
        </RadioGroup>


    <android.support.v7.widget.AppCompatCheckBox
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:id="@+id/register_cb_terminos_condiciones"
        style="@style/register_checkbox"
        android:layout_marginTop="@dimen/marginTop_view"
        android:text="@string/register_terms_aceptar"
        app:layout_constraintTop_toBottomOf="@+id/register_rg_sexo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_tv_privacidad"
        app:buttonTint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/register_tv_privacidad"
        android:textColor="@android:color/white"
        android:clickable="true"
        style="@style/register_tv_button"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@+id/register_cb_terminos_condiciones"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/register_tv_legal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/marginTop_view"
        android:text="@string/register_aviso_privacity" />

    <TextView
        android:id="@+id/register_tv_legal"
        android:layout_marginBottom="@dimen/marginTop_view"
        style="@style/register_tv_button"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/register_cb_terminos_condiciones"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/register_tv_privacidad"
        android:text="@string/register_aviso_legal"/>

</android.support.constraint.ConstraintLayout>