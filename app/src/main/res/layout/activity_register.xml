<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/register_toolbar"
        android:layout_width="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_logo"
        android:layout_height="?attr/actionBarSize" />

    <ImageView
        android:id="@+id/register_logo"
        style="@style/logo"
        app:layout_constraintTop_toBottomOf="@+id/register_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintBottom_toTopOf="@+id/register_title"
        android:layout_marginTop="0dp" />

    <TextView
        style="@style/title"
        android:text="@string/register_title"
        android:id="@+id/register_title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/register_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_input_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
