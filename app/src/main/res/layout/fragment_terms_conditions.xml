<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_activity"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:id="@+id/terms_text"
        android:layout_width="0dp"
        android:background="@drawable/btn_fondo"
        app:layout_constraintBottom_toTopOf="@+id/terms_btn_aceptar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_height="0dp"
        >

        <TextView
            android:id="@+id/terms_tv_politicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:gravity="left"
            android:textSize="13sp"
            android:text="@string/aviso_de_privacidad"
             />

    </ScrollView>

    <Button
        android:textColor="@android:color/white"
        android:id="@+id/terms_btn_aceptar"
        style="@style/login_btn"
        android:text="@string/terms_btn_Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>